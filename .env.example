# ──────────────────────────────────────────────────────────────
# ZeroClaw Docker — Environment Variable Overrides
# Copy to .env and uncomment the variables you want to set.
# Unset variables leave config.toml defaults in place.
# ──────────────────────────────────────────────────────────────

# ── Core ─────────────────────────────────────────────────────
ZEROCLAW_API_KEY=sk-your-key-here
# ZEROCLAW_PROVIDER=openrouter
# ZEROCLAW_MODEL=anthropic/claude-sonnet-4-6
# ZEROCLAW_TEMPERATURE=0.3

# ── Docker host port (not passed to config.toml) ────────────
# ZEROCLAW_PORT=42617

# ── Memory ───────────────────────────────────────────────────
# ZEROCLAW_MEMORY_AUTO_SAVE=true
# ZEROCLAW_MEMORY_BACKEND=sqlite
# ZEROCLAW_MEMORY_EMBEDDING_PROVIDER=none
# ZEROCLAW_MEMORY_EMBEDDING_MODEL=text-embedding-3-small
# ZEROCLAW_MEMORY_EMBEDDING_DIMENSIONS=1536
# ZEROCLAW_MEMORY_KEYWORD_WEIGHT=0.3
# ZEROCLAW_MEMORY_VECTOR_WEIGHT=0.7

# ── Gateway ──────────────────────────────────────────────────
# ZEROCLAW_GATEWAY_HOST=0.0.0.0
# ZEROCLAW_GATEWAY_PORT=42617
# ZEROCLAW_GATEWAY_ALLOW_PUBLIC_BIND=true
# ZEROCLAW_GATEWAY_REQUIRE_PAIRING=true

# ── Autonomy ─────────────────────────────────────────────────
# ZEROCLAW_AUTONOMY_LEVEL=full
# ZEROCLAW_AUTONOMY_MAX_ACTIONS_PER_HOUR=20
# ZEROCLAW_AUTONOMY_MAX_COST_PER_DAY_CENTS=500
# ZEROCLAW_AUTONOMY_BLOCK_HIGH_RISK=true
# ZEROCLAW_AUTONOMY_REQUIRE_APPROVAL_MEDIUM=true
# ZEROCLAW_AUTONOMY_WORKSPACE_ONLY=true
# ZEROCLAW_AUTONOMY_ALLOWED_COMMANDS=["git", "npm", "cargo", "ls", "cat", "grep"]
# ZEROCLAW_AUTONOMY_ALLOWED_ROOTS=["/home/zeroclaw", "/data"]

# ── Runtime ──────────────────────────────────────────────────
# ZEROCLAW_RUNTIME_KIND=native
# ZEROCLAW_RUNTIME_REASONING=true

# ── Agent ────────────────────────────────────────────────────
# ZEROCLAW_AGENT_MAX_HISTORY=50
# ZEROCLAW_AGENT_MAX_TOOL_ITERATIONS=10
# ZEROCLAW_AGENT_COMPACT_CONTEXT=false
# ZEROCLAW_AGENT_PARALLEL_TOOLS=false
# ZEROCLAW_AGENT_TOOL_DISPATCHER=auto

# ── Secrets ──────────────────────────────────────────────────
# ZEROCLAW_SECRETS_ENCRYPT=true

# ── Security — OTP ───────────────────────────────────────────
# ZEROCLAW_SECURITY_OTP_ENABLED=false
# ZEROCLAW_SECURITY_OTP_METHOD=totp
# ZEROCLAW_SECURITY_OTP_TOKEN_TTL=30
# ZEROCLAW_SECURITY_OTP_CACHE_VALID=300

# ── Security — E-Stop ───────────────────────────────────────
# ZEROCLAW_SECURITY_ESTOP_ENABLED=false
# ZEROCLAW_SECURITY_ESTOP_REQUIRE_OTP=true

# ── Observability ────────────────────────────────────────────
# ZEROCLAW_OBSERVABILITY_BACKEND=none
# ZEROCLAW_OBSERVABILITY_OTEL_ENDPOINT=http://localhost:4318
# ZEROCLAW_OBSERVABILITY_OTEL_SERVICE_NAME=zeroclaw

# ── Cost Tracking ────────────────────────────────────────────
# ZEROCLAW_COST_ENABLED=false
# ZEROCLAW_COST_DAILY_LIMIT=10.00
# ZEROCLAW_COST_MONTHLY_LIMIT=100.00
# ZEROCLAW_COST_WARN_PERCENT=80

# ── Skills ───────────────────────────────────────────────────
# ZEROCLAW_OPEN_SKILLS_ENABLED=false
# ZEROCLAW_OPEN_SKILLS_DIR=

# ── Channels (top-level) ────────────────────────────────────
# ZEROCLAW_CHANNELS_CLI=true
# ZEROCLAW_CHANNELS_MESSAGE_TIMEOUT=300

# ── Channel: Telegram ────────────────────────────────────────
# ZEROCLAW_TELEGRAM_BOT_TOKEN=
# ZEROCLAW_TELEGRAM_ALLOWED_USERS=["*"]

# ── Channel: Discord ─────────────────────────────────────────
# ZEROCLAW_DISCORD_BOT_TOKEN=
# ZEROCLAW_DISCORD_ALLOWED_USERS=[]

# ── Channel: Nostr ───────────────────────────────────────────
# ZEROCLAW_NOSTR_PRIVATE_KEY=
# ZEROCLAW_NOSTR_RELAYS=["wss://relay.damus.io", "wss://nos.lol"]
# ZEROCLAW_NOSTR_ALLOWED_PUBKEYS=[]

# ── Channel: WhatsApp (Meta Cloud API) ──────────────────────
# ZEROCLAW_WHATSAPP_ACCESS_TOKEN=
# ZEROCLAW_WHATSAPP_PHONE_NUMBER_ID=
# ZEROCLAW_WHATSAPP_VERIFY_TOKEN=
# ZEROCLAW_WHATSAPP_ALLOWED_NUMBERS=[]

# ── Channel: Linq ────────────────────────────────────────────
# ZEROCLAW_LINQ_API_TOKEN=
# ZEROCLAW_LINQ_FROM_PHONE=
# ZEROCLAW_LINQ_ALLOWED_SENDERS=[]

# ── Channel: Nextcloud Talk ──────────────────────────────────
# ZEROCLAW_NEXTCLOUD_BASE_URL=
# ZEROCLAW_NEXTCLOUD_APP_TOKEN=
# ZEROCLAW_NEXTCLOUD_ALLOWED_USERS=[]
